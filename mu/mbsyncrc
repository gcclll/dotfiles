########################################
# gmail.com
########################################
IMAPAccount gmail
Host imap.gmail.com
User gccll.love@gmail.com
PassCmd "pass email/gmail.com | head -n1"
Port 993
AuthMechs LOGIN
SSLType IMAPS
CertificateFile /etc/ssl/certs/ca-certificates.crt
# CertificateFile /usr/local/etc/openssl/cert.pem  # MacOS

##
# Remote
IMAPStore gmail-remote
Account gmail

# Local
MaildirStore gmail-local
Path ~/.mail/gmail.com/
Inbox ~/.mail/gmail.com/Inbox

## Connections
Channel gmail-all
Master :gmail-remote:"[Gmail]/All Mail"
Slave :gmail-local:"All Mail"
Create Slave
Expunge Both
SyncState *

Channel gmail-inbox
Master :gmail-remote:"INBOX"
Slave :gmail-local:"Inbox"
Create Slave
Expunge Both
SyncState *

Channel gmail-drafts
Master :gmail-remote:"[Gmail]/Drafts"
Slave :gmail-local:"Drafts"
Create Slave
Expunge Both
SyncState *

Channel gmail-sent
Master :gmail-remote:"[Gmail]/Sent Mail"
Slave :gmail-local:"Sent Mail"
Create Slave
Expunge Both
SyncState *

Channel gmail-trash
Master :gmail-remote:"[Gmail]/Trash"
Slave :gmail-local:"Trash"
Create Slave
Expunge Both
SyncState *

## Groups
Group gmail
Channel gmail-all
Channel gmail-inbox
Channel gmail-drafts
Channel gmail-sent
Channel gmail-trash


# ########################################
# # lissner.net
# ########################################
IMAPAccount lissner
Host imap.gmail.com
User henrik@lissner.net
PassCmd "pass email/lissner.net | head -n1"
Port 993
AuthMechs LOGIN
SSLType IMAPS
CertificateFile /etc/ssl/certs/ca-certificates.crt
# CertificateFile /usr/local/etc/openssl/cert.pem  # MacOS

IMAPStore lissner-remote
Account lissner

MaildirStore lissner-local
Path ~/.mail/lissner.net/
Inbox ~/.mail/lissner.net/Inbox

## Connections
Channel lissner-all
Master :lissner-remote:"[Gmail]/All Mail"
Slave :lissner-local:"All Mail"
Create Slave
Expunge Both
SyncState *

Channel lissner-inbox
Master :lissner-remote:"INBOX"
Slave :lissner-local:"Inbox"
Create Slave
Expunge Both
SyncState *

Channel lissner-drafts
Master :lissner-remote:"[Gmail]/Drafts"
Slave :lissner-local:"Drafts"
Create Slave
Expunge Both
SyncState *

Channel lissner-sent
Master :lissner-remote:"[Gmail]/Sent Mail"
Slave :lissner-local:"Sent Mail"
Create Slave
Expunge Both
SyncState *

Channel lissner-trash
Master :lissner-remote:"[Gmail]/Trash"
Slave :lissner-local:"Trash"
Create Slave
Expunge Both
SyncState *

# ## Groups
Group lissner
Channel lissner-all
Channel lissner-inbox
Channel lissner-drafts
Channel lissner-sent
Channel lissner-trash
